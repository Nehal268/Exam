<!-- updaterecipe.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Update Recipe" }) %>
<body>
  <%- include('partials/navbar') %>

  <div class="content">
    <div class="update">
      <h2>Update Recipe</h2>
      <form action="/single-recipe/<%= recipe._id %>?_method=PUT" method="POST">
        <label>Title:</label>
        <input type="text" value="<%= recipe.title %>" id="title" name="title" required />

        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4" required><%= recipe.description %></textarea>

        <label for="ingredients">Ingredients:</label>
        <textarea id="ingredients" name="ingredients" rows="4" required><%= recipe.ingredients.join("\n") %></textarea>

        <label for="instructions">Instructions:</label>
        <textarea id="instructions" name="instructions" rows="4" required><%= recipe.instructions %></textarea>

        <label for="imageUrl">Image URL:</label>
        <input type="text" id="imageUrl" name="imageUrl" value="<%= recipe.imageUrl %>" />

        <!-- Add a field for cookingTime -->
        <label for="cookingTime">Cooking Time (in minutes):</label>
        <input type="number" id="cookingTime" name="cookingTime" value="<%= recipe.cookingTime %>" required />

        <button type="submit">Update Recipe</button>
      </form>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>