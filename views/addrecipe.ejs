<!-- addrecipe.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Add Recipe" }) %>

  <body>
    <%- include('partials/navbar') %>

    <div class="content">
      <div class="create">
        <h2>Add a New Recipe</h2>
        <form action="/addRecipe" method="POST">
          <label>Title:</label>
          <input type="text" value="" id="title" name="title" required />

          <label for="description">Description:</label>
          <textarea id="description" name="description" rows="4" required></textarea><br />

          <label for="ingredients">Ingredients:</label>
          <textarea id="ingredients" name="ingredients" rows="4" required></textarea><br />

          <label for="instructions">Instructions:</label>
          <textarea id="instructions" name="instructions" rows="4" required></textarea><br />

          <label for="imageUrl">Image URL:</label>
          <input type="text" id="imageUrl" name="imageUrl" /><br />

          <label for="cookingTime">Cooking Time (in minutes):</label> <!-- New field -->
          <input type="number" id="cookingTime" name="cookingTime" required /><br /> <!-- New field -->

          <button type="submit">Add Recipe</button>
        </form>
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>